    <main>
        <section class="countdown">
            <h2>Countdown to Launch</h2>
            <div id="countdown-timer">
                <div><span id="days"></span>Days</div>
                <div><span id="hours"></span>Hours</div>
                <div><span id="minutes"></span>Minutes</div>
                <div><span id="seconds"></span>Seconds</div>
            </div>
        </section>
        <section class="event-details-container">
            <div class="event-details">
                <h2>Event Details</h2>
                <p>Date: 30th May 2024</p>
                <p>Time: 10:00 PKT</p>
                <p>Location: Comsats University Islamabad, Lahore Campus</p>
            </div>
        </section>
        <section class="event-description-container">
            <div class="event-description">
            <h2>About the Product</h2>
            <p>Get ready to discover our groundbreaking new product that will revolutionize the industry!</p>
            </div>
        </section>
        <section class="registration-container">
            <div class="registration">
            <h2 id="rr">Register Now</h2>
            <form action="submit.php" method="post">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
                <button type="submit">Register</button>
            </form>
            </div>
        </section>

        <div class="fproducts">
            <h1>Featured Products</h1>
        </div>

        <div class="products">
            <% featuredProducts.forEach(product => { %>
                <div class="product">
                    <h2><%= product.name %></h2>
                    <p><%= product.description %></p>
                    <p>Price: $<%= product.price %></p>
                    <p>Category: <%= product.category %></p>
                    <a href="/products/<%= product._id %>" class="view-button">View Product</a>
                </div>
            <% }) %>
        </div>

    </main>


    <footer>
        <p>For inquiries, contact us at <a href="mailto:info@example.com">info@example.com</a></p>
    </footer>

    

